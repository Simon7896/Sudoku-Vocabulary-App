<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <com.example.sudokuvocabulary.QuestionCardView
        android:id="@+id/questionCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.sudokuvocabulary.SudokuView
        android:id="@+id/sudokuGridView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        app:cellItemFillColour="#000000"
        app:gridColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.example.sudokuvocabulary.SudokuView>

</androidx.constraintlayout.widget.ConstraintLayout>